{{ attach_library('thotrang_web_theme/front_timeline') }}
{{ attach_library('thotrang_web_theme/vertical_timeline') }}
<h3 class="section-label">
  Love Timeline
</h3>
<section class="cd-timeline js-cd-timeline">
  <div class="container max-width-lg cd-timeline__container">
    {% for key, item in data %}
      <div class="cd-timeline__block">
        <div class="cd-timeline__img cd-timeline__img--picture">
          <img src="{{ directory }}/themes/custom/thotrang_web_theme/images/icons8-heart.gif" alt="Picture">
        </div> <!-- cd-timeline__img -->

        <div class="cd-timeline__content text-component">
          <h2>{{ item.title }}</h2>
          <img src="{{ item.field_event_image }}" alt="Picture">
          <p class="color-contrast-medium">{{ item.field_summary }}</p>

          <div class="flex justify-between items-center">
            <span class="cd-timeline__date">{{ item.field_event_time }}</span>
{#            <a href="#0" class="btn btn--subtle">Read more</a>#}
          </div>
        </div> <!-- cd-timeline__content -->
      </div> <!-- cd-timeline__block -->
    {% endfor %}
  </div>
</section> <!